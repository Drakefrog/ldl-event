<div id="{{name}}" class="ldl-ss-page ss-slide ss-{{posX}}-{{posY}} {{name}}">
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 900 1600">
    <g>
      <defs>
        <clipPath id="{{name}}-bright-map-clip">
          <rect x="0" y="0" width="100" height="900" />
        </clipPath>
      </defs>

      <image x="0" y="0" width="900" height="900"
             xlink:href="{{basePath}}/dark-map.png" />

      <image x="0" y="0" width="900" height="900"
             xlink:href="{{basePath}}/bright-map.png"
             clip-path="url(#{{name}}-bright-map-clip)"/>
    </g>

    <g id="{{name}}-rank-circle" transform="translate(700,600) scale(0.0)" >
      <g transform="translate(-156, -156)" >
        <image x="0" y="0" width="312" height="312"
               xlink:href="{{basePath}}/circle.png"/>
        <text x="110" y="120" font-size="48" fill="white">超过</text>
        <text x="80" y="220" font-size="80" fill="white"
              id="{{name}}-better-than-pct">  %</text>
      </g>
    </g>

    <g>
      <text x="50" y="112" opacity="1.0" fill="white" font-size="56">
        我一共走了 <tspan fill="#FF7E00" font-size="78px">
          <tspan id="{{name}}-total-steps">0</tspan>
          <tspan> 步</tspan></tspan>
      </text>
      <text x="50" y="208" opacity="1.0" fill="white" font-size="56">
        日均 <tspan fill="#FF7E00" font-size="78px">
          <tspan id="{{name}}-avg-steps">0</tspan>
          <tspan> 步</tspan></tspan>
      </text>
    </g>

    <g opacity="1.0" transform="translate(450 1050)">
      <text x="-400" y="-140" fill="red" font-size="54px">
        可以当之无愧的称自己为
      </text>

      <g transform="translate(-320, 0)">
        <image x="-72" y="-90" width="144" height="180"
               xlink:href="{{basePath}}/bracket-left.png"></image>
      </g>

      <g transform="translate(320, 0)">
        <image x="-72" y="-90" width="144" height="180"
               xlink:href="{{basePath}}/bracket-right.png"></image>
      </g>

      <g transform="scale(0.0)" id="{{name}}-call-me-0">
        <image x="-187.5" y="-43.5" width="375" height="87"
               xlink:href="{{basePath}}/运动女神.png" />
      </g>

      <g transform="scale(0.0)" id="{{name}}-call-me-1">
        <image x="-187.5" y="-43.5" width="375" height="87"
               xlink:href="{{basePath}}/运动男神.png" />
      </g>

      <g transform="scale(0.0)" id="{{name}}-call-me-2">
        <image x="-284.5" y="-43.5" width="569" height="87"
               xlink:href="{{basePath}}/运动界的范爷.png" />
      </g>

      <g transform="scale(0.0)" id="{{name}}-call-me-3">
        <image x="-332.5" y="-43.5" width="665" height="87"
               xlink:href="{{basePath}}/运动界的钢铁侠.png" />
      </g>

      <g transform="scale(0.0)" id="{{name}}-call-me-4">
        <image x="-236" y="-43.5" width="472" height="87"
               xlink:href="{{basePath}}/运动白富美.png" />
      </g>

      <g transform="scale(0.0)" id="{{name}}-call-me-5">
        <image x="-235" y="-43.5" width="470" height="87"
               xlink:href="{{basePath}}/运动高富帅.png" />
      </g>

    </g>

    <g opacity="1.0">
      <g id="{{name}}-share-btn" transform="translate(450, 1250)">

        <rect fill="#FF7E00" x="-225" y="-45"
              width="450" height="120" rx="20" ry="20"/>

        <text x="0" y="30" font-size="50px"
              font-family="Arial"
              fill="white" text-anchor="middle">去分享</text>

        <image x="-261" y="100" width="522" height="144"
               xlink:href="{{basePath}}/ldl-happy-new-year.png"></image>

      </g>
    </g>

    <g transform="translate(810, 400)">
      <g transform="scale(0.0)" id="{{name}}-firework-small">
        <image x="-72" y="-72" width="144" height="144"
               xlink:href="{{basePath}}/firework-small.png" />
      </g>
    </g>

    <g transform="translate(110, 780)">
      <g transform="scale(0.0)" id="{{name}}-firework-large">
        <image x="-90" y="-90" width="180" height="180"
               xlink:href="{{basePath}}/firework-large.png" />
      </g>
    </g>

  </svg>
</div>
