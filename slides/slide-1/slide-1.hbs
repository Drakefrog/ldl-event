<div id="{{name}}" class="ldl-ss-page ss-slide ss-{{posX}}-{{posY}} {{name}}">

  <svg id="{{name}}-svg" xmlns="http://www.w3.org/2000/svg" viewBox="-450 0 900 1600">

    <g id="{{name}}-imgs"></g>

    <g>
      <g id="{{name}}-text" transform="translate(-400,1050)" font-size="56px" fill="white">

        <text class="ldl-date" x="0" y="-100" font-size="76px" fill="#FF7E00">
          <tspan id="{{name}}-year">2000</tspan><tspan>年</tspan><tspan id="{{name}}-month">01</tspan><tspan>月</tspan><tspan id="{{name}}-day">01</tspan><tspan>日</tspan>
        </text>

        <g id="{{name}}-text-0" opacity="0.0" >
          <!-- <text class="ldl-date" x="0" y="-100" font-size="76px" fill="#FF7E00">Date</text> -->
          <text x="0" y="0">我开始使用乐动力</text>
          <text x="0" y="100">走出了历史性的第一步！</text>
        </g>
        <g id="{{name}}-text-1" opacity="0.0" >
          <!-- <text class="ldl-date" x="0" y="-100" font-size="76px" fill="#FF7E00">Date</text> -->
          <text x="0" y="0">第一次走到<tspan fill="#FF7E00"> 10 </tspan>万步</text>
          <text x="0" y="100">相当于绕香港岛一圈</text>
        </g>
        <g id="{{name}}-text-2" opacity="0.0" >
          <!-- <text class="ldl-date" x="0" y="-100" font-size="76px" fill="#FF7E00">Date</text> -->
          <text x="0" y="0">第一次走到<tspan fill="#FF7E00"> 100 </tspan>万步</text>
          <text x="0" y="100">相当于奥特曼追到小怪兽的距离</text>
        </g>
      </g>
    </g>

  </svg>
</div>
